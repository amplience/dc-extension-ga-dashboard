{
  "name": "dc-extension-ga-dashboard",
  "version": "1.0.0",
  "scripts": {
    "commit": "npx git-cz",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "dev:standalone": "STANDALONE=1 rollup -c -w",
    "start": "sirv public --port 3000",
    "lint": "prettier --check \"src/**/*.{ts,svelte}\" && eslint \"src/**/*.ts\"",
    "lint:fix": "prettier --write 'src/**/*.{ts,svelte}'",
    "test": "jest src --silent",
    "test:watch": "npm run test -- --watch",
    "prerelease": "npm run test",
    "release": "standard-version",
    "validate": "svelte-check"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^6.1.0",
    "@smui/checkbox": "^1.0.0",
    "@smui/select": "^1.0.0",
    "@sveltejs/svelte-virtual-list": "^3.0.1",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/svelte": "^3.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "commitizen": "^4.2.2",
    "commitlint": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "json-2-csv": "^3.7.8",
    "lint-staged": "^10.5.1",
    "node-sass": "^5.0.0",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.1",
    "rollup": "^2.33.1",
    "rollup-plugin-inline-svg": "^2.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-svelte": "^6.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "snake-case": "^3.0.3",
    "standard-version": "^9.0.0",
    "svelte": "^3.29.4",
    "svelte-check": "^1.1.10",
    "svelte-flatpickr": "^3.1.0",
    "svelte-jester": "^1.1.5",
    "svelte-preprocess": "^4.5.2",
    "sveltejs-tippy": "^3.0.0",
    "ts-jest": "^26.4.3",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "dc-extensions-sdk": "github:amplience/dc-extensions-sdk#feature/CMP-7377",
    "dc-management-sdk-js": "1.7.0",
    "message-event-channel": "^1.1.0",
    "sirv-cli": "^1.0.8"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ],
      "type-case": [
        1,
        "always",
        "lower-case"
      ],
      "subject-case": [
        1,
        "always",
        "lower-case"
      ]
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{svelte,json}": [
      "prettier --write"
    ]
  }
}
