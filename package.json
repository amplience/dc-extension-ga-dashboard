{
  "name": "dc-extension-ga-dashboard",
  "version": "1.1.0",
  "scripts": {
    "commit": "npx git-cz",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "dev:standalone": "STANDALONE=1 rollup -c -w",
    "start": "sirv public --port 3000",
    "lint": "prettier --check \"src/**/*.{ts,svelte}\" && eslint \"src/**/*.ts\"",
    "lint:fix": "prettier --write 'src/**/*.{ts,svelte}'",
    "test": "jest src --silent",
    "test:watch": "npm run test -- --watch",
    "prerelease": "npm run test",
    "release": "standard-version",
    "validate": "svelte-check"
  },
  "devDependencies": {
    "@commitlint/cli": "^10.0.0",
    "@commitlint/config-conventional": "^10.0.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-typescript": "^5.0.0",
    "@smui/checkbox": "^1.0.0",
    "@smui/form-field": "^1.0.0",
    "@smui/radio": "^1.0.0",
    "@smui/select": "^1.0.0",
    "@sveltejs/svelte-virtual-list": "^3.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/svelte": "^3.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^3.10.0",
    "commitizen": "^4.2.0",
    "commitlint": "^9.1.2",
    "cz-conventional-changelog": "^3.2.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-localstorage-mock": "^2.4.3",
    "json-2-csv": "^3.7.6",
    "lint-staged": "^10.2.11",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.1",
    "rollup": "^2.26.5",
    "rollup-plugin-inline-svg": "^2.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-postcss": "^3.1.6",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^7.0.0",
    "snake-case": "^3.0.3",
    "standard-version": "^9.0.0",
    "svelte": "^3.24.1",
    "svelte-check": "^1.0.23",
    "svelte-flatpickr": "^2.4.0",
    "svelte-jester": "^1.1.2",
    "svelte-preprocess": "^4.1.1",
    "sveltejs-tippy": "^3.0.0",
    "ts-jest": "^26.2.0",
    "tslib": "^2.0.1",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "dc-extensions-sdk": "^1.2.0",
    "dc-management-sdk-js": "github:amplience/dc-management-sdk-js#master",
    "exponential-backoff": "^3.1.0",
    "message-event-channel": "^1.1.0",
    "sirv-cli": "^1.0.6"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ],
      "type-case": [
        1,
        "always",
        "lower-case"
      ],
      "subject-case": [
        1,
        "always",
        "lower-case"
      ]
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{svelte,json}": [
      "prettier --write"
    ]
  }
}
